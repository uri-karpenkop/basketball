<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:background="@drawable/bsk3"

    >
    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="back"
        android:layout_gravity="left"
        android:id="@+id/btnBack"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:text="Statistic"
        android:textSize="50sp"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="All Shooting Workout"
        android:layout_gravity="left"
        android:id="@+id/btnAllShooting"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="All Dribelling Workout"
        android:layout_gravity="left"
        android:id="@+id/btnAllDribeling"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="All Defensing Workout"
        android:layout_gravity="left"
        android:id="@+id/btnAllDefensing"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="All Pushups Workout"
        android:layout_gravity="left"
        android:id="@+id/btnAllPushups"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Highest Record"
        android:layout_gravity="left"
        android:id="@+id/btnHighestRecords"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        />
</LinearLayout>